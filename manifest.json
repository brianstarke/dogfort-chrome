{
  "name": "dogfort",
  "version": "0.6",
  "manifest_version": 2,
  "description": "Share images and video with your asshole friends.",
  "icons": {
    "128": "img/icon_128.png",
    "48": "img/icon_48.png"
  },
  "browser_action": {
    "default_icon": {
      "38": "img/icon_48.png",
      "19": "img/icon_48.png"
    },
    "default_title": "dogfort",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["jquery.min.js", "bg.js"]
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "cookies",
    "http://dogfort.io/*",
    "http://localhost:9000/*"],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
